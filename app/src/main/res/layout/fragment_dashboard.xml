<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_menu_toolbar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#1a8752"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_parent_recyclers">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/splash_screen1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <TextView
            android:layout_weight="5"
            android:text="Music App"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_height="match_parent"
            android:paddingTop="14sp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:layout_weight="1"
            android:id="@+id/btn_search"
            android:background="@drawable/ic_baseline_menu_24"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_parent_recyclers"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ll_menu_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_weight="5.5"
            android:id="@+id/ll_top_recycler"
            android:orientation="vertical"
            android:background="#96370b"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_menu_toolbar"
            app:layout_constraintBottom_toTopOf="@id/ll_choose_a_song">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_dashboard_recycler_view"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/dashboard_recycler_view"
                app:spanCount="2"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_choose_a_song"
            android:layout_weight="0.8"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="#d67e27"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/ll_top_recycler"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:text="Choose a song..."
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingStart="20sp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="8"
            android:background="#d67e27"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_dashboard_recycler_view_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/dashboard_recycler_view_bottom"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_media_player"
            android:layout_weight="1.2"
            android:background="#5980cf"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/media_player_image"
                android:layout_width="80dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="10sp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/media_player_name"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingTop="20sp"
                android:paddingLeft="5dp"
                android:layout_width="100dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn_play"
                android:background="@drawable/ic_baseline_play_circle_24"
                android:layout_width="45dp"
                android:layout_height="45dp"
                />
            <Button
                android:id="@+id/btn_forward"
                android:background="@drawable/ic_baseline_fast_forward_24"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>