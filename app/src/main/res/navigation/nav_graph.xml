<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainActivityFragment">
    <fragment
        android:id="@+id/mainActivityFragment"
        android:name="com.alecbrando.musicplayer.presentation.fragments.MainActivityFragment"
        android:label="MainActivityFragment" >
        <action
            android:id="@+id/action_mainActivityFragment_to_introViewPagerFragment"
            app:destination="@id/introViewPagerFragment" />
    </fragment>
    <fragment
        android:id="@+id/introViewPagerFragment"
        android:name="com.alecbrando.musicplayer.presentation.fragments.IntroViewPagerFragment"
        android:label="IntroViewPagerFragment" >
        <action
            android:id="@+id/action_introViewPagerFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />
    </fragment>
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.alecbrando.musicplayer.presentation.fragments.DashboardFragment"
        android:label="DashboardFragment" />
</navigation>